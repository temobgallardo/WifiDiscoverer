<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:IsObservableCollBuggy.Models"
             xmlns:local="clr-namespace:IsObservableCollBuggy.Pages"
             xmlns:converters="clr-namespace:IsObservableCollBuggy.Converters"
             xmlns:resources="clr-namespace:IsObservableCollBuggy.Resx"
             x:DataType="models:Diagnostics"
             x:Class="IsObservableCollBuggy.Pages.Diagnostics"
             BackgroundColor="{StaticResource BaseContentPageBackground}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:SelectedTabColorToBoolConverter x:Key="SelectedTabColorToBool" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout CompressedLayout.IsHeadless="True"
                     Spacing="0"
                     BackgroundColor="Purple"
                     x:DataType="models:Diagnostics">

            <!--status bar begin-->
            <!--<shared:StatusBar x:Name="StatusBarView" />-->

            <!--title bar layout-->
            <Grid HorizontalOptions="FillAndExpand"
                  Padding="0,10,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="500" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button Text="BACK"
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="Center"
                        Padding="10,0,0,0"
                        IsEnabled="{Binding IsBackBtnEnabled}"
                        Style="{StaticResource BackButton}" />

                <StackLayout Grid.Row="0"
                             Grid.Column="1"
                             HorizontalOptions="Center"
                             Padding="0,10,0,10">
                    <Label Text="{Binding GreetingLabelText}"
                           Style="{StaticResource HeaderLabelLine1TextStyle}" />
                    <Label Text="WELCOME"
                           Style="{StaticResource HeaderLabelLine2TextStyle}" />
                </StackLayout>
            </Grid>

            <!--content body-->
            <Grid BackgroundColor="White"
                  x:DataType="models:Diagnostics">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" />
                    <ColumnDefinition Width="700" />
                </Grid.ColumnDefinitions>

                <!--Left Side: Scroll View Options-->
                <ScrollView Grid.Column="0"
                            Grid.Row="0">
                    <StackLayout BackgroundColor="#CCCCCD"
                                 Margin="0"
                                 Spacing="2">

                        <!--Status Tab-->
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     BackgroundColor="#e2e2e2">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsStatusTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsStatusTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsStatusTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70"></Setter>
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsStatusTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD"></Setter>
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.DiagnosticPageStatusTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="Status" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <!--Dome Tab-->
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     BackgroundColor="#e2e2e2">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsDomeTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsDomeTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsDomeTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsDomeTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.DiagnosticPageDomeTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="Dome" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <!--Battery Tab-->
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     BackgroundColor="#e2e2e2">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsBatteryTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsBatteryTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsBatteryTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70"></Setter>
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsBatteryTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.DiagnosticPageBatteryTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="Battery" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <!--Lamp Tab-->
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     BackgroundColor="#e2e2e2">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsLampTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsLampTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsLampTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsLampTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.DiagnosticPageLampTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="Lamp" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <!--Login Tab-->
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     BackgroundColor="#e2e2e2">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsLoginTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsLoginTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsLoginTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsLoginTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.DiagnosticPageLoginTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="Login" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <!--Adb Tab-->
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     BackgroundColor="#e2e2e2">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsAdbTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsAdbTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsAdbTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsAdbTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.DiagnosticPageAdbTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="Adb" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <!--About Tab-->
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     BackgroundColor="#e2e2e2">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsAboutTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsAboutTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsAboutTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsAboutTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.DiagnosticPageAboutTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="About" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <!--Wifi Tab-->
                        <StackLayout Orientation="Horizontal"
                                     BackgroundColor="#e2e2e2"
                                     x:Name="WifiTab">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsWifiTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsWifiTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsWifiTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsWifiTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.DiagnosticPageWifiTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="Wifi" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>

                        <!--Server Menu Tab-->
                        <StackLayout Orientation="Horizontal"
                                     VerticalOptions="Center"
                                     BackgroundColor="#e2e2e2">
                            <StackLayout.Triggers>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsServerMenuTabVisible}"
                                             Value="True">
                                    <Setter Property="BackgroundColor"
                                            Value="White" />
                                </DataTrigger>
                                <DataTrigger TargetType="StackLayout"
                                             Binding="{Binding IsServerMenuTabVisible}"
                                             Value="False">
                                    <Setter Property="BackgroundColor"
                                            Value="#e2e2e2" />
                                </DataTrigger>
                            </StackLayout.Triggers>
                            <BoxView WidthRequest="15"
                                     BackgroundColor="#6d6e70"
                                     HeightRequest="66">
                                <BoxView.Triggers>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsServerMenuTabVisible}"
                                                 Value="True">
                                        <Setter Property="BackgroundColor"
                                                Value="#6D6E70" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="BoxView"
                                                 Binding="{Binding IsServerMenuTabVisible}"
                                                 Value="False">
                                        <Setter Property="BackgroundColor"
                                                Value="#CCCCCD" />
                                    </DataTrigger>
                                </BoxView.Triggers>
                            </BoxView>
                            <Label Text="{x:Static resources:AppResource.ServerMenuTabTitleText}"
                                   TextColor="Black"
                                   FontSize="20"
                                   FontFamily="{StaticResource GothamRndBookFontFamily}"
                                   Margin="15,0,15,0"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center" />
                            <BoxView WidthRequest="2"
                                     BackgroundColor="#e2e2e2"
                                     HeightRequest="66">
                            </BoxView>
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TabClickCommand}"
                                                      CommandParameter="ServerMenu" />
                            </StackLayout.GestureRecognizers>
                        </StackLayout>
                    </StackLayout>
                </ScrollView>

                <!--Status Screen-->
                <StackLayout x:Name="StatusTab"
                             Grid.Column="1"
                             Grid.Row="0"
                             Orientation="Vertical"
                             IsVisible="{Binding IsStatusTabVisible}">
                    <Label VerticalOptions="End"
                           Text="Last Sync"
                           Style="{StaticResource HeaderLabelLine1TextStyle}"
                           TextColor="Color.ForestGreen"
                           HorizontalOptions="CenterAndExpand"
                           FontSize="26"
                           Margin="0,25,0,0" />
                    <Label VerticalOptions="End"
                           Text="{Binding RoomsLastSyncTimeStamp, StringFormat='Rooms - {0}'}"
                           Style="{StaticResource DiagnosticLabelStyle}"
                           TextColor="Purple"
                           HorizontalOptions="CenterAndExpand"
                           FontSize="23"
                           Margin="0,26,0,0" />
                    <Label VerticalOptions="End"
                           Text="{Binding UsersLastSyncTimeStamp, StringFormat='Users - {0}'}"
                           Style="{StaticResource DiagnosticLabelStyle}"
                           TextColor="Purple"
                           HorizontalOptions="CenterAndExpand"
                           FontSize="23"
                           Margin="0,28,0,0" />
                    <Label VerticalOptions="End"
                           Text="{Binding LampLastSyncTimeStamp, StringFormat='Lamps - {0}'}"
                           Style="{StaticResource DiagnosticLabelStyle}"
                           TextColor="Purple"
                           HorizontalOptions="CenterAndExpand"
                           FontSize="23"
                           Margin="0,30,0,0" />
                </StackLayout>

                <!--Right Side: Dome Screen-->
                <StackLayout x:Name="DomeTab"
                             Grid.Column="1"
                             Grid.Row="0"
                             Orientation="Vertical"
                             IsVisible="{Binding IsDomeTabVisible}">
                    <Grid HorizontalOptions="Fill"
                          VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.ColumnSpan="3"
                                     Grid.Column="0"
                                     HorizontalOptions="FillAndExpand"
                                     Orientation="Vertical"
                                     VerticalOptions="FillAndExpand"
                                     Grid.Row="0"
                                     Margin="20,20,0,0">
                            <Label VerticalOptions="End"
                                   Text="{x:Static resources:AppResource.DiagnosticPageSetDomePositionTitleText}"
                                   Style="{StaticResource HeaderLabelLine1TextStyle}"
                                   TextColor="ForestGreen"
                                   HorizontalOptions="CenterAndExpand"
                                   FontSize="27"
                                   Margin="21,0,0,0" />
                            <StackLayout HorizontalOptions="StartAndExpand"
                                         VerticalOptions="CenterAndExpand"
                                         Orientation="Horizontal"
                                         Margin="20,0,0,0">
                                <Button Text="{x:Static resources:AppResource.BOTTOM}"
                                        IsEnabled="{Binding IsMoveBottomButtonEnabled}"
                                        HeightRequest="70"
                                        WidthRequest="175"
                                        TextColor="White"
                                        CornerRadius="5">
                                    <!--Clicked="DomeBottom_OnClicked"-->
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding IsMoveBottomButtonEnabled}"
                                                     Value="true">
                                            <Setter Property="BackgroundColor"
                                                    Value="#411E5D" />
                                            <Setter Property="TextColor"
                                                    Value="White" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding IsMoveBottomButtonEnabled}"
                                                     Value="false">
                                            <Setter Property="BackgroundColor"
                                                    Value="MediumPurple" />
                                            <Setter Property="TextColor"
                                                    Value="White" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                                <Button Text="{x:Static resources:AppResource.MIDDLE}"
                                        IsEnabled="{Binding IsMoveMiddleButtonEnabled}"
                                        HeightRequest="70"
                                        WidthRequest="175"
                                        TextColor="White"
                                        Margin="20,0,0,0"
                                        CornerRadius="5">
                                    <!--Clicked="DomeMiddle_OnClicked"-->
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding IsMoveMiddleButtonEnabled}"
                                                     Value="true">
                                            <Setter Property="BackgroundColor"
                                                    Value="#411E5D" />
                                            <Setter Property="TextColor"
                                                    Value="White" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding IsMoveMiddleButtonEnabled}"
                                                     Value="false">
                                            <Setter Property="BackgroundColor"
                                                    Value="MediumPurple" />
                                            <Setter Property="TextColor"
                                                    Value="White" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                                <Button Text="{x:Static resources:AppResource.TOP}"
                                        IsEnabled="{Binding IsMoveTopButtonEnabled}"
                                        HeightRequest="70"
                                        WidthRequest="175"
                                        TextColor="White"
                                        Margin="20,0,0,0"
                                        CornerRadius="5">
                                    <!--Clicked="DomeTop_OnClicked"-->
                                    <Button.Triggers>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding IsMoveTopButtonEnabled}"
                                                     Value="true">
                                            <Setter Property="BackgroundColor"
                                                    Value="#411E5D" />
                                            <Setter Property="TextColor"
                                                    Value="White" />
                                        </DataTrigger>
                                        <DataTrigger TargetType="Button"
                                                     Binding="{Binding IsMoveTopButtonEnabled}"
                                                     Value="false">
                                            <Setter Property="BackgroundColor"
                                                    Value="MediumPurple" />
                                            <Setter Property="TextColor"
                                                    Value="White" />
                                        </DataTrigger>
                                    </Button.Triggers>
                                </Button>

                            </StackLayout>
                        </StackLayout>
                        <StackLayout Grid.Column="0"
                                     Grid.ColumnSpan="3"
                                     Orientation="Horizontal"
                                     HorizontalOptions="Fill"
                                     VerticalOptions="End"
                                     Grid.Row="1">
                            <Button Style="{StaticResource DiagnosticPlugMeInWarning}"
                                    TextColor="White"
                                    Text="{Binding AcErrorMessage}"
                                    BackgroundColor="OrangeRed"
                                    BorderRadius="1"
                                    IsVisible="{Binding IsPlugInAcBtnVisible}"
                                    Margin="0,0,0,10" />
                        </StackLayout>
                    </Grid>
                </StackLayout>

                <!--Right Side: Battery Screen-->
                <StackLayout x:Name="BatteryTab"
                             Grid.Column="1"
                             Grid.Row="0"
                             Orientation="Vertical"
                             IsVisible="{Binding IsBatteryTabVisible}">
                    <Grid HorizontalOptions="Fill"
                          VerticalOptions="FillAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <StackLayout Orientation="Vertical"
                                     HorizontalOptions="FillAndExpand"
                                     VerticalOptions="FillAndExpand"
                                     Grid.Row="0"
