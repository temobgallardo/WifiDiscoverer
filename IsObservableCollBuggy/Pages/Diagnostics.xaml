                            HorizontalOptions="CenterAndExpand"
                            TextColor="White"
                            CornerRadius="5">
                        <!--Clicked="ProductionServerButton_OnClicked"-->
                        <Button.Triggers>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding IsProductionServerEnabled}"
                                         Value="true">
                                <Setter Property="BackgroundColor"
                                        Value="#411E5D" />
                                <Setter Property="TextColor"
                                        Value="White" />
                            </DataTrigger>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding IsProductionServerEnabled}"
                                         Value="false">
                                <Setter Property="BackgroundColor"
                                        Value="MediumPurple" />
                                <Setter Property="TextColor"
                                        Value="White" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </StackLayout>

                <!--Right Side: Wifi Options-->
                <local:WifiView x:Name="WifiTabbed"
                                Grid.Column="1"
                                Grid.Row="0"
                                x:DataType="models:WifiConnection"
                                IsVisible="{Binding BackgroundColor, Source={x:Reference WifiTab}, Converter={StaticResource SelectedTabColorToBool}}" />
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
