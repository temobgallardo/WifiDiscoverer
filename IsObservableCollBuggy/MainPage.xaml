<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IsObservableCollBuggy.MainPage"
             xmlns:viewmodels="clr-namespace:IsObservableCollBuggy.Models"
             xmlns:controls="clr-namespace:IsObservableCollBuggy.Controls"
             x:DataType="viewmodels:WifiConnection"
             x:Name="this">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="User"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            <Entry Placeholder="Password"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            <Button x:Name="LoginButton"
                    Text="Login"
                    Clicked="Button_Clicked"
                    Style="{StaticResource ActiveButton}" />
            <controls:XenexButton x:Name="XenexButton"
                                  Text="Xenex Button"
                                  Style="{StaticResource ActiveButton}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
